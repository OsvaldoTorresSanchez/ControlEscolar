@model ML.Materia
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Form</h2>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Materias</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h2>Ingrese los datos de las materias</h2>
        </div>
    </div>

    @using (Html.BeginForm("Form", "Materia", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="col-md-12">
                @Html.LabelFor(model => model.IdMateria, new { @class = "visually-hidden-focusable" })
                @Html.TextBoxFor(model => model.IdMateria, new { @class = "form-control visually-hidden-focusable", @id = "txtIdAlumno" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                @Html.LabelFor(model => model.Nombre)
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", placeholder = " Nombre", @onkeypress = "return ValidarSoloLetras(event,'lblNombre')", @id = "txtNombre" })
                @Html.ValidationMessageFor(model => model.Nombre, null, new { @class = "text-danger", @id = "lblNombre" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @Html.LabelFor(model => model.Costo)
                @Html.TextBoxFor(model => model.Costo, new { @class = "form-control", placeholder = " Apellido Paterno", @onkeypress = "return ValidarSoloLetras(event,'lblApellidoPaterno')", @id = "txtApellidoPaterno" })
                @Html.ValidationMessageFor(model => model.Costo, null, new { @class = "text-danger", @id = "lblApellidoPaterno" })
            </div>
        </div>


        <br />
        <div class="row">
            <div class="col-md-1">
                <button type="submit" class="btn btn-success"> Guardar</button>
            </div>
            <div class="col-md-1">
                @Html.ActionLink("Cancelar", "GetAll", "Materia", new { @class = "btn btn-danger" })
            </div>
        </div>
    }
</div>