@model ML.Materia
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetAll</h2>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Materia</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h5>Seleccion un regisro para agregar o editar su informacion </h5>
            <hr />
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-md- offset-11 ">
            @Html.ActionLink(" ", "Form", "materia", new { @class = "btn btn-success bi bi-person-plus-fill" })

        </div>
    </div>
    @if (Model.Materias != null)
    {

        <div class="row">
            <div class="col-md-11">
                <div>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Editar</th>
                                <th class="visually-hidden-focusable">IdUsuario</th>
                                <th>Nombre</th>
                                <th>ApellidoPaterno</th>
                                <th>ApellidoMaterno</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ML.Materia materia in Model.Materias)
                            {
                                <tr>
                                    <td>
                                        <a class="btn btn-warning glyphicon glyphicon-edit bi bi-pencil-square "
                                           href="@Url.Action("Form", "Materia", new {IdMateria = materia.IdMateria})" );">

                                        </a>
                                    </td>
                                    <td class="visually-hidden-focusable">@materia.IdMateria</td>
                                    <td>@materia.Nombre</td>
                                    <td>@materia.Costo</td>

                                    <td>
                                        <a class="btn btn-danger bi bi-trash"
                                           href="@Url.Action("Delete", "Materia", new {IdMateria = materia.IdMateria})"
                                           onclick="return confirm('estas seguro que deseas eliminar este registro? ');">

                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger " role="alert">
            No encontraron Usuario registrados. Error: @ViewBag.Message;
        </div>
    }

</div>
