@model ML.Alumno
@{
    ViewBag.Title = "AlumnoGetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AlumnoGetAll</h2>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Alumno</h2>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            @*@foreach (ML.Alumno alumno in Model.Alumnos)
                {
                    <h5>Materias Asignadas de @alumno.Nombre </h5>
                }*@
            <h5>Registros de todos los alumno</h5>
            <hr />
        </div>
    </div>

    <br />

    @*<div class="row">
            <div class="col-md- offset-11 ">
                @Html.ActionLink(" ", "Form", "Alumno", new { @class = "btn btn-success bi bi-person-plus-fill" })

            </div>
        </div>*@
    @if (Model.Alumnos != null)
    {

        <div class="row">
            <div class="col-md-11">
                <div>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Ver</th>
                                <th class="visually-hidden-focusable">IdUsuario</th>
                                <th>Nombre</th>
                                <th>ApellidoPaterno</th>
                                <th>ApellidoMaterno</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ML.Alumno alumno in Model.Alumnos)
                            {
                                <tr>
                                    <td>
                                        <a class="btn btn-info bi bi-eye "
                                           href="@Url.Action("GetAlMateriaAsignadasByIdAlumno", "AlumnoMateria", new {IdAlumno = alumno.IdAlumno})" );">

                                        </a>
                                    </td>
                                    <td class="visually-hidden-focusable">@alumno.IdAlumno</td>
                                    <td>@alumno.Nombre</td>
                                    <td>@alumno.ApellidoPaterno</td>
                                    <td>@alumno.ApellidoMaterno</td>

                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger " role="alert">
            No encontraron Usuario registrados. Error: @ViewBag.Message;
        </div>
    }

</div>